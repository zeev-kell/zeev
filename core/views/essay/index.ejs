<%- include header.ejs %>
<%- include navigation.ejs %>
<div class="container-fluid post-container">
    <div class="post-side hidden-xs">
        <div class="sidebar">
            <aside>
                <h3 class="aside-title">标签</h3>

                <div class="aside-wrap tags-wrap">
                    <% for(var i = 0;i < tags.length;i++){ %>
                    <a class="tag" href="tags/<%= tags[i]._id %>"><%= tags[i].name %></a>
                    <% } %>
                </div>
            </aside>
        </div>
    </div>
    <div class="posts">
        <div class="posts-wrap">
            <% for(var i = 0;i < posts.length;i++){ var post = posts[i]; %>
            <article class="post">
                <h2 class="post-title">
                    <a href="post/<%= post._id %>"><%= post.title %></a>
                </h2>

                <div class="post-dynamic">
                    <ul>
                        <% if(post.author) {%>
                            <li class="author"><a><%= getParse(post,"author.name") %></a></li>
                        <% } %>
                        <li><%= moment(post.created_at) %></li>
                        <li>标签：
                            <% if (post.tags && post.tags.length > 0){ %>
                            <% for(var j = 0;j < post.tags.length;j++){ %>
                                <a class="tag" href="tags/<%= post.tags[j]._id %>"><%= post.tags[j].name %></a>
                            <% } %>
                            <% }else{ %>
                            <a>未分类</a>
                            <% } %>
                        </li>
                        <li class="hidden-xs">共 <strong>0</strong> 人围观</li>
                        <li class="hidden-xs"><strong>0</strong> 个不明物体</li>
                    </ul>
                </div>
                <div class="post-meta"><p><%- post.html %></p></div>
                <a class="btn-link" href="post/<%= post._id %>">阅读全文 »</a>
            </article>
            <% } %>
        </div>
    </div>
</div>
<script type="text/javascript" src="/public/js/base.js"></script>
<script type="text/javascript" src="/essay/js/index.js"></script>
<%- include footer.ejs %>