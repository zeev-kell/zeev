<style>
    body, html {
        height  : 100%;
        margin  : 0;
        padding : 0;
        font    : 14px "Lucida Grande", Helvetica, Arial, sans-serif;
    }

    div {
        margin  : 0;
        padding : 0;
    }

    .table {
        display        : table;
        width          : 500px;
        height         : 80%;
        vertical-align : middle;
        margin         : 0 auto;
    }

    .table-cell {
        display        : table-cell;
        vertical-align : middle;
    }

    .text-center {
        text-align : center;
    }

    h1 {
        font-size : 5rem;
        margin    : 1rem;;
    }

    p {
        color     : #333333;
        font-size : 1.2rem;
    }

    .message {
        font-size   : 2rem;
        font-weight : bold;
    }

    .btn-link {
        text-decoration : none;
        font-size       : 1.2rem;
    }
</style>
<body>
<div class="table">
    <div class="table-cell">
        <div>
            <h1 class="text-center">{{code}}</h1>

            <p><strong>路径：</strong>{{req.path}}</p>

            <p class="message">{{message}}</p>
            <a class="btn-link" href="http://zeevkell.com/essay/">返回首页 →</a>
        </div>
    </div>
</div>
</body>