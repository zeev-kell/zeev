{{> essay/header }}
{{> navigation }}
<div class="container-fluid layout archive-container">
    <article>
        <header class="header-title"><h2>归档</h2></header>
        {{#each archives}}
            <section class="archive-wrap">
                <h3 class="archive-title">
                    {{{moment _id format='YYYY年MM月DD日'}}}
                    <span>({{count}})</span>
                </h3>
                <ul>
                    {{#each posts}}
                        <li class="archive">
                            <a class="btn-link" href="/essay/post/{{_id}}">{{title}}</a>
                            <span class="archive-date">{{{moment created_at format='L'}}}</span>
                        </li>
                    {{/each}}
                </ul>
            </section>
        {{/each}}
    </article>
</div>
{{> essay/footer }}